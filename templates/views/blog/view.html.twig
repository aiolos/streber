{% extends 'blog.html.twig' %}

{% block body %}
    <div class="row">
        <div class="offset-xl-2 col-xl-8 col-12">
            <div class="d-none d-md-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                <div><a href="/" class="btn btn-sm btn-outline-secondary"><i class="fa fa-arrow-left"></i> Terug</a></div>
                <div>
                    <h1 class="h2">
                        {% if activity.type == 'Ride' %}
                            <i class="fa fa-bicycle"></i>
                        {% elseif activity.type == 'Walk' %}
                            <i class="fa fa-walking"></i>
                        {% elseif activity.type == 'Snowboard' %}
                            <i class="fa fa-snowflake"></i>
                        {% else %}
                            <i class="fa fa-comment"></i>
                        {% endif %}
                        {{ post.title }}
                    </h1>
                </div>
                <div class="d-xs-none d-md-block"><h4 class="text-muted">{{ post.date|date('d-m-Y') }}</h4></div>
            </div>
            <div class="d-flex d-md-none justify-content-between flex-no-wrap align-items-center pt-1 pb-2 mb-0">
                <div><a href="/" class="btn btn-sm btn-outline-secondary"><i class="fa fa-arrow-left"></i> Terug</a></div>
                <div class=""><h4 class="text-muted">{{ post.date|date('d-m-Y') }}</h4></div>
            </div>
            <div class="d-flex d-md-none justify-content-between flex-wrap align-items-center">
                <h1 class="h2">
                    {% if activity.type == 'Ride' %}
                        <i class="fa fa-bicycle"></i>
                    {% elseif activity.type == 'Walk' %}
                        <i class="fa fa-walking"></i>
                    {% elseif activity.type == 'Snowboard' %}
                        <i class="fa fa-snowflake"></i>
                    {% else %}
                        <i class="fa fa-comment"></i>
                    {% endif %}
                    {{ post.title }}
                </h1>
            </div>

            <div class="row">
                <div class="col-md-7 col-12 m-10">
                    <div class="card">
                        <div class="card-body">
                            {{ post.text|markdown }}<br>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 col-md-5 col-sm-12 m-10">
                    <div class="card">
                        <div class="card-header">
                            <h5>
                                <i class="fa fa-chart-area"></i>
                                De cijfers:
                            </h5>
                        </div>
                        <div class="card-body">
                            <small>
                            <dl class="row">
                                <dt class="col-sm-7">Afstand:</dt>
                                <dd class="col-sm-5">{{ (activity.distance / 1000)|number_format(1, ',', '.') }} km</dd>

                                <dt class="col-sm-7">Hoogtemeters:</dt>
                                <dd class="col-sm-5">{{ activity.total_elevation_gain|number_format(0, ',', '.') }} m</dd>

                                <dt class="col-sm-7">Tijd bewogen:</dt>
                                <dd class="col-sm-5">{{ activity.moving_time|time_format_long }}</dd>

                                <dt class="col-sm-7">Tijd totaal:</dt>
                                <dd class="col-sm-5">{{ activity.elapsed_time|time_format_long }}</dd>

                                <dt class="col-sm-7">Gemiddeld:</dt>
                                <dd class="col-sm-5">{{ (activity.average_speed * 3.6)|number_format(1, ',', '.') }} km/h</dd>

                                <dt class="col-sm-7">Max:</dt>
                                <dd class="col-sm-5">{{ (activity.max_speed * 3.6)|number_format(1, ',', '.') }} km/h</dd>

                                {% if activity.gear_id %}
                                    <dt class="col-sm-7">Materiaal:</dt>
                                    <dd class="col-sm-5">{{ activity.gear.name }}</dd>
                                {% endif %}
                            </dl>
                            </small>
                        </div>
                    </div>
                    <div class="card">
                        <div class="h-100">
                            <div id="map" class="map" style="width: 100%; height: 22vh;"></div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                {% for photo in photos %}
                                    <div class="col-lg-4 col-6">
                                        <a href="{{ photo.urls|first }}" data-toggle="lightbox" data-gallery="activity-gallery" data-title="{{ photo.caption }}">
                                            <img src="{{ photo.urls|first }}" class="img-fluid rounded m-0">
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="h-100">
                            <div id="altitudeDiv"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/ekko-lightbox.css" />
{% endblock %}

{% block javascripts %}
    {% include 'partials/map.html.twig' %}
    {% include 'partials/graphs.html.twig' %}

    <script src="/assets/js/ekko-lightbox.min.js"></script>
    <script>
        $(document).on('click', '[data-toggle="lightbox"]', function(event) {
            event.preventDefault();
            $(this).ekkoLightbox();
        });
    </script>
{% endblock %}
