{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="offset-lg-2 offset-md-1 col-lg-8 col-md-10 col-sm-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                <h1 class="h2">
                    <i class="fa fa-file-alt"></i> {{ post.title }}
                </h1>
            </div>

            <div class="row">
                <div class="col-lg-7 col-md-7 col-sm-12 m-10">
                    <div class="card">
                        <div class="card-body">
                            {{ post.text|markdown }}<br>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 col-md-5 col-sm-12 m-10">
                    <div class="card">
                        <div class="card-header">
                            <h5>
                                <i class="fa fa-map-signs"></i>
                                {{ activity.name }}
                            </h5>
                        </div>
                        <div class="card-body">
                            Afstand: {{ (activity.distance / 1000)|number_format(2, ',', '.') }} km<br>
                            Hoogtemeters: {{ activity.total_elevation_gain|number_format(0, ',', '.') }} m<br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
