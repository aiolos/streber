{% extends 'blog.html.twig' %}

{% block body %}
<div class="row">
    <div class="offset-lg-2 offset-md-1 col-lg-6 col-md-8 col-sm-12">
{% for post in posts %}
            <div class="row mt-3">
                <div class="col-lg-12 col-md-12 col-sm-12 m-10">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="h2 card-title">{{ post.title }}</h1>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{ post.date|date("d-m-Y") }}
                                {% if post.activityGroup %} - {{ post.activityGroup.title }}{% endif %}
                            </h6>
                        </div>
                        <div class="card-body">
                            {{ post.text|markdown|split('</p>')|first|raw }}
                            <br>
                            <br>
                            <a href="/blog/{{ post.id }}" class="btn btn-sm btn-outline-secondary">Lees verder <i class="fa fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
{% endfor %}
    </div>
    <div class="col-lg-2 col-md-2 col-sm-12">
        <div class="row mt-3">
            <div class="col-lg-12 col-md-12 col-sm-12 m-10">
                <div class="card">
                    <div class="card-header">
                        <h6 class="h6 card-title">Filteren:</h6>
                    </div>
                    <div class="card-body">
                        <small>
                        <a href="/" class="">Alle berichten</a><br>
                        {% for group in groups %}
                        <a href="/?group={{ group.id }}" class="">{{ group.title }}</a><br>
                        {% endfor %}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="offset-lg-2 offset-md-1 col-lg-6 col-md-8 col-sm-12">
        <div class="float-right mt-2">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item {% if currentPage <= 1 %}disabled{% endif %}"><a class="page-link" href="/?page={{ currentPage - 1 }}{% if group %}&group={{ group }}{% endif %}">Vorige</a></li>
                    {% for page in 1..pages %}
                    <li class="page-item {% if page == currentPage %}active{% endif %}"><a class="page-link" href="/?page={{ page }}{% if group %}&group={{ group }}{% endif %}">{{ page }}</a></li>
                    {% endfor %}
                    <li class="page-item {% if currentPage >= pages %}disabled{% endif %}"><a class="page-link" href="/?page={{ currentPage + 1 }}{% if group %}&group={{ group }}{% endif %}">Volgende</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
{% endblock %}
