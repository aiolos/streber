{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2"><i class="fa fa-globe"></i> Activiteiten</h1>
</div>

<div class="row">
    <div class="table-responsive col-12">
        <table class="table table-striped table-sm" id="activitiesTable">
            <thead>
            <tr>
                <th>Naam</th>
                <th>Afstand</th>
                <th>Afstand</th>
                <th>Tijd</th>
                <th>Tijd</th>
                <th><i class="fa fa-thumbs-up"></i></th>
                <th>Hoogte</th>
                <th>Hoogte</th>
                <th>Type</th>
                <th>Datum</th>
            </tr>
            </thead>
            <tbody>
            {% for activity in activities %}
                <tr>
                    <td><a href="/view/activities/{{ activity.id }}">{{ activity.name }}</a></td>
                    <td class="text-right">{{ (activity.distance / 1000)|number_format(2, ',', '.') }} km</td>
                    <td>{{ (activity.distance / 1000) }}</td>
                    <td class="text-right">{{ activity.elapsed_time|time_format_short }}</td>
                    <td>{{ activity.elapsed_time }}</td>
                    <td class="text-right">{{ activity.kudos_count }}</td>
                    <td class="text-right">{{ (activity.total_elevation_gain)|number_format(0, ',', '.') }} m</td>
                    <td>{{ (activity.total_elevation_gain) }}</td>
                    <td>{{ activity.type }}</td>
                    <td class="text-right">{{ activity.start_date_local|date('Y-m-d H:i') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#activitiesTable').DataTable({
                order: [[ 9, 'desc' ]],
                columns: [
                    { data: "name" },
                    { data: "distance", orderData: 2 },
                    { data: "distanceRaw", visible: false },
                    { data: "totalTime", orderData: 4 },
                    { data: "totalTimeRaw", visible: false },
                    { data: "kudos" },
                    { data: "height", orderData: 7 },
                    { data: "heightRaw", visible: false },
                    { data: "type" },
                    { data: "datetime" }
                ]
            });
        } );
    </script>
{% endblock %}
