{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2"><i class="fa fa-file-alt"></i> Berichten</h1>
</div>

<div class="row">
    <div class="table-responsive col-12">
        <table class="table table-striped table-sm" id="postsTable">
            <thead>
            <tr>
                <th>Titel</th>
                <th>Datum</th>
                <th>Status</th>
                <th>Activiteit</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td><a href="/posts/view/{{ post.id }}">{{ post.title }}</a></td>
                    <td>{{ post.date|date("d-m-Y") }}</td>
                    <td>{{ post.status }}</td>
                    <td><a href="/activities/{{ post.activityId }}">{{ post.activityId }}</a></td>
                    <td class="text-right"><a href="/posts/edit/{{ post.id }}"><i class="fa fa-edit"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#postsTable').DataTable({
                columns: [
                    { data: "title" },
                    { data: "status" },
                    { data: "date" },
                    { data: "activityId" },
                    { data: "", sortable: false }
                ]
            });
        } );
    </script>
{% endblock %}
