{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="offset-lg-3 offset-md-2 col-lg-6 col-md-8 col-sm-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="fa fa-file-alt"></i> Bericht: {{ post.title }}
                    <div class="float-right">
                        <a href="/blog/edit/{{ post.id }}" class="btn btn-sm btn-outline-secondary">
                            <i class="fa fa-edit"></i> Wijzig bericht
                        </a>
                    </div>
                </h1>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 m-10">
                    <div class="card">
                        <div class="card-body">
                            {{ post.text }}<br>
                            Status: {{ post.status }}<br>
                            Datum: {{ post.date|date("d-m-Y") }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 m-10">
                    <div class="card">
                        <div class="card-header">
                            <h5>
                                <i class="fa fa-map-signs"></i>
                                {{ activity.name }}
                                <div class="float-right">
                                    <a href="/activities/{{ activity.id }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="fa fa-globe"></i> Bekijk
                                    </a>
                                </div>
                            </h5>
                        </div>
                        <div class="card-body">
                            Afstand: {{ (activity.distance / 1000)|number_format(2, ',', '.') }} km<br>
                            Hoogtemeters: {{ activity.total_elevation_gain|number_format(0, ',', '.') }} m<br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
