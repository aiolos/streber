{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="h2">
            <i class="fa fa-globe"></i> Activiteit: {{ activity.name }}<br>
            <small>{{ activity.start_date_local|date("Y-m-d H:i") }}</small>
        </h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="/view/activities/{{ activity.id }}/map" class="btn btn-sm btn-outline-secondary"><i class="fa fa-map"></i> Kaart</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    <h5>
                        <i class="fa fa-map-signs"></i>
                        Rit: {{ (activity.distance / 1000)|number_format(2, ',', '.') }} km
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Hoogte: {{ activity.total_elevation_gain|number_format(1, ',', '.') }} m<br>
                        Tijd bewogen: {{ activity.moving_time|time_format_long }}<br>
                        Tijd totaal: {{ activity.elapsed_time|time_format_long }}<br>
                        Gemiddelde snelheid: {{ (activity.average_speed * 3.6)|number_format(2, ',', '.') }} km/h<br>
                        Max snelheid: {{ (activity.max_speed * 3.6)|number_format(2, ',', '.') }} km/h<br>
                        Gemiddelde Cadans: {{ activity.average_cadence|number_format }} rpm<br>
                        Gemiddeld vermogen: {{ activity.average_watts|number_format }} W<br>
                        Gemiddelde hartslag: {{ activity.has_heartrate ? activity.average_heartrate|number_format : '-' }}<br>
                        Max hartslag: {{ activity.has_heartrate ? activity.max_heartrate|number_format : '-' }}<br>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fa fa-thumbs-up"></i> {{ kudos|length }} Kudos:</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                    {% for kudo in kudos %}
                        <span class="badge badge-secondary">{{ kudo.firstname }} {{ kudo.lastname }}</span>
                    {% endfor %}
                    </p>
                </div>
            </div>
        </div>
        <div class="col-5">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fa fa-map"></i> Kaart:</h5>
                </div>
                <div class="h-100">
                    <div id="map" class="map" style="width: 100%; height: 22vh;"></div>
                </div>
            </div>
        </div>
    </div>
    <h3><i class="fa fa-map-pin"></i> Segmenten:</h3>
    <div class="table-responsive">
        <table class="table table-striped table-sm" id="segmentsTable">
            <thead>
            <tr>
                <th>Naam</th>
                <th>Afstand</th>
                <th>Afstand</th>
                <th>Tijd</th>
                <th>Tijd</th>
                <th>Snelheid</th>
                <th>Snelheid</th>
                <th>Cadans</th>
                <th>Avg <i class="fa fa-heart"></i></th>
                <th>Max <i class="fa fa-heart"></i></th>
                <th>Datum/Tijd</th>
            </tr>
            </thead>
            <tbody>
            {% for effort in activity.segment_efforts %}
                <tr>
                    <td><a href="/view/segments/{{ effort.segment.id }}">{{ effort.name }}</a></td>
                    <td class="text-right">{{ (effort.distance / 1000)|number_format(2, ',', '.') }} km</td>
                    <td>{{ (effort.distance / 1000) }}</td>
                    <td class="text-right">{{ effort.elapsed_time|time_format_short }}</td>
                    <td>{{ effort.elapsed_time }}</td>
                    <td class="text-right">{{ (effort.distance / effort.elapsed_time * 3.6)|number_format(1, ',', '.') }} km/h</td>
                    <td>{{ (effort.distance / effort.elapsed_time * 3.6) }}</td>
                    <td class="text-right">{{ effort.average_cadence|number_format }}</td>
                    <td class="text-right">{{ activity.has_heartrate ? effort.average_heartrate|number_format : '-' }}</td>
                    <td class="text-right">{{ activity.has_heartrate ? effort.max_heartrate|number_format : '-' }}</td>
                    <td>{{ effort.start_date_local|date("Y-m-d H:i") }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.leafletjs.com/leaflet-0.7/leaflet.css" />
{% endblock %}

{% block javascripts %}
    <script src="//cdn.leafletjs.com/leaflet-0.7/leaflet.js"></script>
    <script type="text/javascript" src="//rawgit.com/jieter/Leaflet.encoded/master/Polyline.encoded.js"></script>
    <script>
        $(document).ready( function () {
            $('#segmentsTable').DataTable({
                order: [[ 10, 'asc' ]],
                columns: [
                    { data: "name" },
                    { data: "distance", orderData: 2 },
                    { data: "distanceRaw", visible: false },
                    { data: "time", orderData: 4 },
                    { data: "timeSeconds", visible: false },
                    { data: "speed", orderData: 6 },
                    { data: "speedRaw", visible: false },
                    { data: "cadence" },
                    { data: "heartbeat_avg" },
                    { data: "heartbeat_max" },
                    { data: "datetime" }
                ]
            });
        } );

        var encoded = "{{ activity.map.summary_polyline|replace({'\\': '\\\\'}) }}";
        var coordinates = L.Polyline.fromEncoded(encoded).getLatLngs();

        var map = L.map('map').fitBounds(coordinates);
        L.tileLayer(
            'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 18,
            }).addTo(map);

        L.polyline(
            coordinates,
            {
                color: 'blue',
                weight: 2,
                opacity: .7,
                lineJoin: 'round'
            }
        ).addTo(map);
    </script>
{% endblock %}
