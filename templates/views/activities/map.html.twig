{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="h2">
            <i class="fa fa-globe"></i> Activiteit: {{ activity.name }}
            <small>
                 - {{ (activity.distance/1000)|number_format }} km
            </small>
        </h1>
        <a href="/view/activities/{{ activity.id }}" class="btn btn-sm btn-outline-secondary" role="button">
            <i class="fa fa-arrow-left"></i> Terug
        </a>

    </div>
    <div class="h-100">
        <div id="map" class="map" style="width: 100%; height: 78vh;"></div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.leafletjs.com/leaflet-0.7/leaflet.css" />
{% endblock %}

{% block javascripts %}
    <script src="//cdn.leafletjs.com/leaflet-0.7/leaflet.js"></script>
    <script type="text/javascript" src="//rawgit.com/jieter/Leaflet.encoded/master/Polyline.encoded.js"></script>
    <script>
        var encoded = "{{ activity.map.polyline|replace({'\\': '\\\\'}) }}";
        var coordinates = L.Polyline.fromEncoded(encoded).getLatLngs();

        var map = L.map('map').fitBounds(coordinates);
        L.tileLayer(
            'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 18,
            }).addTo(map);

        L.polyline(
            coordinates,
            {
                color: 'blue',
                weight: 2,
                opacity: .7,
                lineJoin: 'round'
            }
        ).addTo(map);
    </script>
{% endblock %}
