{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="offset-lg-4 offset-md-3 col-lg-4 col-md-6 col-sm-12">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">
                <i class="fa fa-lock"></i> Login:
            </h1>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 m-10">
                <div class="card">
                    {#<div class="card-header">#}
                        {#<h5><i class="fa fa-lock"></i> Login</h5>#}
                    {#</div>#}
                    <div class="card-body">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <form action="{{ path('login') }}" method="post">
                            <div class="form-group">
                                <label for="username">Email:</label>
                                <input type="text" class="form-control" id="username" name="_username" required="required" value="{{ last_username }}" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" id="password" name="_password" required="required"/>
                            </div>

                            <button type="submit" class="btn btn-primary">Login</button>
                            of <a href="/register">Registreer een account</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
